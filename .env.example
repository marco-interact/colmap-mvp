# COLMAP Worker Configuration
PORT=8080

# GPU Configuration
COLMAP_CPU_ONLY=false
CUDA_VISIBLE_DEVICES=0

# Storage Configuration
STORAGE_BUCKET=colmap-processing-bucket
GCS_PROJECT_ID=your-project-id

# Database Configuration
DATABASE_PATH=/tmp/colmap_app.db

# Processing Configuration
MAX_FRAMES_LOW=30
MAX_FRAMES_MEDIUM=50
MAX_FRAMES_HIGH=100
PROCESSING_TIMEOUT=3600

# Worker Configuration
MAX_CONCURRENT_JOBS=4
MAX_REQUESTS_PER_MINUTE=20

# Cloud Storage URLs (for Northflank)
FRONTEND_URL=https://your-frontend.northflank.app
WORKER_URL=https://your-worker.northflank.app
